local Players = game:GetService("Players")
local player = Players.LocalPlayer

local TELEPORT_TARGET = Vector3.new(775, 43, 52)

local function instantSpawn(char)
    local hrp = char:WaitForChild("HumanoidRootPart")

    hrp.CFrame = CFrame.new(TELEPORT_TARGET)
    char.PrimaryPart = hrp
    char:SetPrimaryPartCFrame(CFrame.new(TELEPORT_TARGET))
end

if player.Character then
    instantSpawn(player.Character)
end

player.CharacterAdded:Connect(function(char)
    instantSpawn(char)

    char.ChildAdded:Connect(function(child)
        task.wait(0.05)
        if child:IsA("Tool") and child:FindFirstChild("Handle") then
            local h = child.Handle
            h.Massless = true
            h.Transparency = 1
            h.Size = Vector3.new(60,60,60)
        end
    end)
end)

player.Backpack.ChildAdded:Connect(function(tool)
    task.wait(0.05)
    if tool:IsA("Tool") and tool:FindFirstChild("Handle") then
        local h = tool.Handle
        h.Massless = true
        h.Transparency = 1
        h.Size = Vector3.new(60,60,60)
    end
end)

task.spawn(function()
    while true do
        local char = player.Character
        if char then
            for _, tool in ipairs(char:GetChildren()) do
                if tool:IsA("Tool") then
                    pcall(function()
                        tool:Activate()
                    end)
                end
            end
        end
        task.wait(0.1)
    end
end)

local folder = workspace:FindFirstChild("Folder")
if folder and folder:FindFirstChild("Touch") then
    folder.Touch:Destroy()
end
